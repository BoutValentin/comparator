<div class="flex flex-col items-center justifiy-center p-[15px]">
<h2 class="font-medium text-[20px] mb-[12px]">Connection</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "flex flex-col items-center justify-center") do |f| %>
  <div class="field mb-[12px]">
    <%= f.label :email, class: "text-[#555454]" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-md" %>
  </div>

  <div class="field mb-[12px]">
    <%= f.label :password, class: "text-[#555454]" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "rounded-md" %>
  </div>

  <div class="actions text-center cursor-pointer p-[10px] text-[#fff] bg-[#000] text-[18px] font-medium">
    <%= f.submit "Se connecter", class: "cursor-pointer" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
